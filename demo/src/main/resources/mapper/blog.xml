<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.blog.repository.BlogMapper">

    <select id="selectBlogItem" parameterType="com.example.demo.blog.model.Blog" resultMap="blogResult">
        SELECT blog.id       AS blog_id
             , blog.title    AS blog_title
             , user.id       AS user_id
             , user.name     AS user_name
             FROM blog
             INNER JOIN user
             ON blog.user_id = user.id
             WHERE 1 = 1
             AND blog.id = #{id}
    </select>
    <resultMap id="blogResult" type="com.example.demo.blog.model.Blog">
        <id column="blog_id" property="id" />
        <result column="blog_title" property="title" />
        <association property="user">
            <id column="user_id" property="id" />
            <result column="user_name" property="name" />
        </association>
    </resultMap>

</mapper>
