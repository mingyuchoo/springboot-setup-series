<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.user.repository.UserMapper">

    <select id="selectCount" parameterType="com.example.demo.user.entity.User" resultType="Integer">
         SELECT COUNT(1) AS count
           FROM user
          WHERE 1 = 1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="name != null">
            AND name = #{name}
        </if>
    </select>

    <select id="selectList" parameterType="com.example.demo.user.entity.User" resultType="com.example.demo.user.entity.User">
         SELECT id   AS id
              , name AS name
           FROM user
          WHERE 1 = 1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="name != null">
            AND name = #{name}
        </if>
    </select>

    <select id="selectItem" parameterType="Integer" resultType="com.example.demo.user.entity.User">
        SELECT id    AS id
        , name  AS name
        FROM user
        WHERE id = #{id}
    </select>

    <insert id="insertItem" parameterType="com.example.demo.user.entity.User">
        INSERT INTO user (name)
        VALUES (#{name})
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>


    <update id="updateItem" parameterType="com.example.demo.user.entity.User">
        UPDATE user
           SET name = #{name}
         WHERE id = #{id}
    </update>

    <delete id="deleteItem" parameterType="Integer">
        DELETE
          FROM user
         WHERE id = #{id}
    </delete>

</mapper>
