    name: String
}

type Group {
    id: ID!
    name: String
}

type User {
    id: ID!
    name: String
}

type Role {
    id: ID!
    name: String
}

type Policy {
    id: ID!
    name: String
}

type Permission {
    id: ID!
    name: String
}

type Resource {
    id: ID!
    name: String
}

